@model AllProductQueryModel

<link href="~/css/allpage/component.css" rel="stylesheet" />

<div style="display:table; margin: 0 auto; padding-top: 50px	">
	<link href="./component.css" rel="stylesheet" />
	<div class="component-container">
		<form class="component-form">
			<div class="component-container1">
				<div class="component-container2">
					<input style="margin-left: 20px;" asp-for="SearchingTerm"
						   type="text"
						   placeholder="Search..."
						   class="component-textinput input" />
				</div>
				<div class="component-container4">
					<select asp-for="Sort" class="component-select1 btn btn-secondary dropdown-toggle">
						@foreach (var sort in Model.Sorts)
						{
							<option value="@sort">@sort</option>
						}
					</select>
					<button type="submit" class="component-button button">
						<span>
							<span>Search</span>
							<br />
						</span>
					</button>
				</div>
				<div class="component-container5"></div>
			</div>
		</form>
	</div>
</div>

