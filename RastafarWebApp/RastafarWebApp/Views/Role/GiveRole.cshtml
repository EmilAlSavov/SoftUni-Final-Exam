@model RoleViewModel
@using RastafarAppData.Data.Models;
@using RastafarAppServices.Services
@using RastafarWebApp.Data.Models;

<div class="row">
	<div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
		<form method="post">
			<div class="form-group">
				<label asp-for="UserName"></label>
				<input asp-for="UserName" class="form-control" placeholder="UserName...">
				<span asp-validation-for="UserName" class="small text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="RoleName"></label>
				<input asp-for="RoleName" class="form-control" placeholder="RoleName...">
				<span asp-validation-for="RoleName" class="small text-danger"></span>
			</div>
			<div class="text-center">
				<input class="btn btn-primary mt-3" type="submit" value="Save" />
			</div>
		</form>
	</div>
</div>
