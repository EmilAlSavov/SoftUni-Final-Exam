@model AllPostQueryModel

<!-- Header-->
<header class="bg-dark py-5">
	<div class="container px-4 px-lg-5 my-5">
		<div class="text-center text-white">
			<h1 class="display-4 fw-bolder">All Events</h1>
			<p class="lead fw-normal text-white-50 mb-0">Find adventures through out the world.</p>
		</div>
	</div>
</header>

<partial name="Partials/_FilterPartial" model="@Model" />

<div class="row">
	<section class="py-5">
		<div class="container px-4 px-lg-5 mt-5">
			<div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">


				@{
					var previousPage = Model.CurrentPage - 1;
					if (previousPage < 1)
					{
						previousPage = 1;
					}
					var maxPage = Model.ResultCount / AllPostQueryModel.PostsPerPages;

					var nextPage = Model.CurrentPage + 1;
					if (nextPage > maxPage)
					{
						nextPage = maxPage;
					}
				}
				<div class="row mb-5" style="height: 45px;width: 0px;">
					<div class="col-md-6 d-grid gap-2 d-md-flex justify-content-md-start" style="height: 45px;">


						<a style="position: absolute; left: 50px;" class="btn btn-primary @(Model.CurrentPage == 1 ? "disabled" :
string.Empty)"
						   asp-controller="Event"
						   asp-action="All"
						   asp-route-currentPage="@previousPage"
						   asp-route-category="@Model.CampType"
						   asp-route-searchTerm="@Model.SearchingTerm"
						   asp-route-Sort="@((int)Model.Sort)"><<</a>
					</div>
					@{
						var shouldButtonBeDisabled = Model.CurrentPage == maxPage ||
						!Model.Posts.Any();
					}
					<div class="col-md-6 d-grid gap-2 d-md-flex justify-content-md-end" style="height: 45px;">
						<a style="position: absolute; right: 50px;" class="btn btn-primary
 @(shouldButtonBeDisabled ? "disabled" : string.Empty)"
						   asp-controller="Event"
						   asp-action="All"
						   asp-route-currentPage="@nextPage"
						   asp-route-Sort="@((int)Model.Sort)">>></a>
					</div>
				</div>



				@if (Model.Posts.Count() != 0)
				{
					@foreach (var post in Model.Posts)
					{

						<partial name="Partials/_PostPartial" model="@post" />

					}
				} else
				{
					<div>
						<p style="font-size: 30px">No Events</p>
					</div>
				}

			</div>
		</div>
	</section>
</div>

